{
  "version": 2,
  "functions": {
    "api/ollama.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/ollama-stream.js": {
      "memory": 1024,
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://hxh.paydn.cn" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/ollama/(.*)",
      "dest": "/api/ollama.js"
    },
    {
      "src": "/api/ollama-stream/(.*)",
      "dest": "/api/ollama-stream.js"
    }
  ]
} 